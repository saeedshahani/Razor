@model Product[]

@{ 
    ViewBag.Title = "Product Name";
}

<table>
    <thead>
        <tr><th>Name</th><th>Price</th><th>Stock Level</th></tr>
    </thead>
    <tbody>
        @foreach (Product p in Model)
        { 
            <tr data-productid="@p.ProductID" data-stocklevel="@ViewBag.StockLevel">
                <td>@p.Name</td>
                <td>@($"{p.Price:C2}")</td>
                <td>
                    @switch (ViewBag.StockLevel)
                    {
                        case 0:
                            @:Out of Stock
                            break;
                        case 1:
                        case 2:
                        case 3:
                            @: Low Stock (@ViewBag.StockLevel)
                            break;
                        default:
                            @: @ViewBag.StockLevel in Stock
                break;
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
